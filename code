HTML Code
----------------------------------------
<div class="filter-row">
    <!-- Input field -->
   <select id="customer" class="select2-enhance"></select>

   <input type="date" id="fromDate" placeholder="From Date">
   <input type="date" id="toDate" placeholder="To Date">

   <!-- Search button -->
   <button type="button" class="search-btn" onclick="search()">
    Search
   </button>

   <!-- Clear button -->
   <button type="button" class="clear-btn" onclick="clearFilters()">
      Clear
   </button>

</div>


<script>
// Initialize Select2
$(function() {
    $('.select2-enhance').select2({
        placeholder: 'Selectâ€¦',
        allowClear: true
    });
});

// SEARCH
function search() {
    $s('P20_CUSTOMER', $('#customer').val());
    $s('P20_FROM', $('#fromDate').val());
    $s('P20_TO', $('#toDate').val());


    apex.region('customer_report').refresh();
}

// CLEAR FILTERS
function clearFilters() {

    // Reset form fields
    $('#fromDate, #toDate').val('');
    $('#customer').val(null).trigger('change');

    // Clear APEX items
    $s('P20_CUSTOMER', null);
    $s('P20_FROM', null);
    $s('P20_TO', null);

    apex.region('customer_report').refresh();
}
</script>





JavaScript File URLs
----------------------------------------
https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js


Function and Global Variable Declaration
----------------------------------------
$("#customer").select2({
  placeholder: "Select Username",
  allowClear: true,
  ajax: {
    url: "wwv_flow.show",
    dataType: "json",
    delay: 250,
    data: function (params) {
      return {
        p_request: "APPLICATION_PROCESS=PM_CUSTOMER",
        p_flow_id: $v('pFlowId'),
        p_flow_step_id: $v('pFlowStepId'),
        p_instance: $v('pInstance'),
        x01: params.term || ""
      };
    },
    processResults: function (data) {
      return {
        results: data.items
      };
    }
  }
});


